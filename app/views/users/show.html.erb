<h1> Profile Page </h1>
<p> <%= @user.email %> </p>
<p> Followers: <%= @user.follow_count %> </p>


<% if user_signed_in? &&  %>
	<% if current_user != @user %>
	<% if current_user.follows?(@user) %>
		<%= link_to "Unfollow", unfollow_user_path(@user), method: :put %>
	<% else %>
		<%= link_to "Follow", follow_user_path(@user), method: :put %>
	<% end %>
	<% end %>
<% end %>

<p><%= link_to "Back to Users", users_path %></p>